<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:zcontrolmccross="acn.zmatchcodecross.controls"
>
    <Panel backgroundDesign="Transparent">
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleModPagamento}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelModPagamento}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <ComboBox
                    id="cbxModalitaPagamentoWizard2"
                    width="100%"
                    items="{
                          path: 'ModalitaPagamento>/'
                        }"
                    selectedKey="{Sop>/Zwels}"
                    editable="{= ${Sop>/Ztipopag} !== '4' &amp;&amp; ${Utility>/EnableEdit} ? true : false}"
                    selectionChange="onModalitaPagamentoChange"
                >
                    <c:Item
                        key="{ModalitaPagamento>Zwels}"
                        text="{ModalitaPagamento>Zdescwels}"
                    />
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </ComboBox>
                <Text
                    text="{i18n>labelPaeseResidenza}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    value="{Sop>/Banks}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL1 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCausaleValutaria}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            indent="XL1"
                        />
                    </layoutData>
                </Text>
                <zcontrolmccross:MatchcodeCross
                    id="iptCausaleValutaria"
                    viewId="{Utility>/ViewId}"
                    whichMC="CausaleValutaria"
                    value="{Sop>/ZCausaleval}"
                    editable="{= 
								${Sop>/Banks} !== 'IT' &amp;&amp; 
								${Sop>/Banks} !== '' &amp;&amp; 
								${Utility>/EnableEdit} ? true : false
							}"
                    change="onCausaleValutariaChange"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>

                <Text
                    text="{i18n>labelIban}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <zcontrolmccross:MatchcodeCross
                    id="iptIban"
                    viewId="{Utility>/ViewId}"
                    whichMC="Iban"
                    Lifnr="{Sop>/Lifnr}"
                    Zwels="{Sop>/Zwels}"
                    value="{Sop>/Iban}"
                    visible="{= ${Sop>/ZspecieSop} === '1' ? true : false}"
                    editable="{= 
							${Sop>/Zwels} !== '' &amp;&amp; 
                            ${Sop>/Zwels} !== 'ID1' &amp;&amp; 
                            ${Sop>/Zwels} !== 'ID2' &amp;&amp;
							${Sop>/Zwels} !== 'ID3'  &amp;&amp; 
							${Sop>/Zwels} !== 'ID4' &amp;&amp;  
							${Utility>/EnableEdit} &amp;&amp;
                            ${Sop>/Zcoordest} === '' ? true : false
						}"
                    maxLength="34"
                    change="onIbanChange"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>
                <zcontrolmccross:MatchcodeCross
                    id="iptIbanRitenuta"
                    viewId="{Utility>/ViewId}"
                    whichMC="IbanRitenuta"
                    Lifnr="{Sop>/Lifnr}"
                    Zwels="{Sop>/Zwels}"
                    Witht="{Sop>/Witht}"
                    Cebenra="{Sop>/ZzCebenra}"
                    value="{Sop>/Iban}"
                    visible="{= ${Sop>/ZspecieSop} === '2' ? true : false}"
                    editable="{= 
							${Sop>/Zwels} !== '' &amp;&amp; 
							${Sop>/Zwels} !== 'ID3'  &amp;&amp; 
							${Sop>/Zwels} !== 'ID4' &amp;&amp;  
							${Utility>/EnableEdit} &amp;&amp;
                            ${Sop>/Zcoordest} === '' ? true : false
						}"
                    maxLength="34"
                    change="onIbanChange"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>
                <Text
                    text="{i18n>labelAlias}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <zcontrolmccross:MatchcodeCross
                    id="iptAlias"
                    viewId="{Utility>/ViewId}"
                    whichMC="AliasRGS"
                    value="{Sop>/Zalias}"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                    editable="{= ${Utility>/EnableEdit} ? true : false}"
                    change="onAliasChange"
                    maxLength="17"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>
                <Text
                    text="{i18n>labelTipoConto}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                    editable="false"
                    value="{Sop>/AccTypeId}"
                    maxLength="10"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelProvincia}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                    editable="false"
                    value="{Sop>/RegioConto}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelDescConto}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                    editable="false"
                    value="{Sop>/ZaccText}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelBic}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="{= ${Sop>/Zwels} === 'ID3' ? false : true}"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/Swift}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCoordEstere}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID6' || ${Sop>/Zwels} === 'ID10' ? true : false}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    valueHelpRequest="onValueHelpCoordEstere"
                    showValueHelp="true"
                    editable="{= 
						(${Sop>/Zwels} === 'ID6' || ${Sop>/Zwels} === 'ID10') &amp;&amp; 
						${Utility>/EnableEdit} &amp;&amp; 
                        ${Utility>/isZcoordEsterPrevalorizzato} === false &amp;&amp;
                        ${Sop>/Iban} === ''? true : false}"
                    value="{Sop>/Zcoordest}"
                    visible="{= ${Sop>/Zwels} === 'ID6' || ${Sop>/Zwels} === 'ID10' ? true : false}"
                    change="onCoordinateEstereChange"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelPosFinEntrate}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID4'}"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    visible="{= ${Sop>/Zwels} === 'ID4'}"
                    editable="{= ${Utility>/EnableEdit} ? true : false}"
                    value="{Sop>/Zzposfinent}"
                    maxLength="24"
                    change="onPosFinanziariaEntrateChange"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelPurpose}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID6' || ${Sop>/Zwels} === 'ID10'}"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="{= ${Sop>/Zwels} === 'ID6' || ${Sop>/Zwels} === 'ID10'}"
                        />
                    </layoutData>
                </Text>
                <Input
                    visible="{= ${Sop>/Zwels} === 'ID6' || ${Sop>/Zwels} === 'ID10'}"
                    editable="{= ${Utility>/EnableEdit} ? true : false}"
                    value="{Sop>/Zpurpose}"
                    maxLength="35"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCategoryPurpose}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{Sop>/Zcatpurpose}"
                    editable="false"
                    maxLength="5"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelFlagFruttInfrutt}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="{= ${Sop>/Zwels} === 'ID3'}"
                        />
                    </layoutData>
                </Text>
                <ComboBox
                    width="100%"
                    items="{
						path: '/FlagFruttiferoSet'
					}"
                    selectedKey="{Sop>/Zflagfrutt}"
                    editable="{= ${Utility>/EnableEdit} ? true : false}"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                    change="onFlagFruttiferoChange"
                >
                    <c:Item
                        key="{Zflagfrutt}"
                        text="{DescFlagFruttifero}"
                    />
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </ComboBox>
                <Text
                    text="{i18n>labelCausaleBen}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                    value="{Sop>/Zcausben}"
                    maxLength="140"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
    </Panel>
</c:FragmentDefinition>
