<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:zcontrolmccross="acn.zmatchcodecross.controls"
>
    <Panel
        backgroundDesign="Transparent"
        visible="{= ${Sop>/Zwels} === 'ID3' || ${Sop>/Zwels} === 'ID4' ? true : false}"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleVersante}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelCodProvenienza}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/Zcodprov}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCFCommittente}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    editable="{= 
                      ${Utility>/isVersanteEditable} &amp;&amp; 
                      ${Utility>/EnableEdit} ? true : false
                    }"
                    value="{Sop>/Zcfcommit}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCodTributo}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>

                <zcontrolmccross:MatchcodeCross
                    id="iptCodiceTributo"
                    viewId="{Utility>/ViewId}"
                    whichMC="CodiceTributo"
                    value="{Sop>/Zcodtrib}"
                    editable="{= 
                      ${Utility>/isVersanteEditable} &amp;&amp; 
                      ${Utility>/EnableEdit} ? true : false
                    }"
                    change="onCausaleTributoChange"
                    maxLength="200"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>
                <Text
                    text="{i18n>labelPeriodoRiferimentoFrom}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <DatePicker
                    valueFormat="yyyy-MM-dd"
                    displayFormat="dd.MM.yyyy"
                    value="{
                      path: 'Sop>/Zperiodrifda',
                      type: 'sap.ui.model.type.Date',
                      formatOptions: {
                        pattern: 'dd.MM.yyyy'
                      }
                    }"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </DatePicker>
                <Text
                    text="{i18n>labelPeriodoRiferimentoTo}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <DatePicker
                    valueFormat="yyyy-MM-dd"
                    displayFormat="dd.MM.yyyy"
                    value="{
                      path: 'Sop>/Zperiodrifa',
                      type: 'sap.ui.model.type.Date',
                      formatOptions: {
                        pattern: 'dd.MM.yyyy'
                      }
                    }"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </DatePicker>
                <Text
                    text="{i18n>labelMatricolaINPS}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input value="{Sop>/Zcodinps}">
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCodVersante}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="{Utility>/EnableEdit}"
                    value="{Sop>/Zcodvers}"
                    maxLength="50"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCFVersante}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    editable="{Utility>/EnableEdit}"
                    value="{Sop>/Zcfvers}"
                    maxLength="16"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelDescVersante}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    editable="{Utility>/EnableEdit}"
                    value="{Sop>/Zdescvers}"
                    maxLength="255"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
    </Panel>
</c:FragmentDefinition>
