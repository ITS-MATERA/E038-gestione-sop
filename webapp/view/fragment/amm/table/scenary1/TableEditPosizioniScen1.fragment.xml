<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Panel
        class="onlyTopPadding"
        visible="{= ${StepScenario>/wizard1Step2} &amp;&amp; ${Utility>/Table} === 'Edit' ? true : false}"
        backgroundDesign="Transparent"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleTablePosizioniScen3}" />
                <ToolbarSpacer />
                <Button
                    class="sapUiTinyMarginEnd sapUiTinyMarginBegin sapUiTinyMarginBottom"
                    icon="sap-icon://add"
                    text="{i18n>btnAdd}"
                    type="Emphasized"
                    press="onAddPosition"
                    visible="{Utility>/EnableEdit}"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
                <Button
                    class="sapUiTinyMarginEnd sapUiTinyMarginBegin sapUiTinyMarginBottom"
                    icon="sap-icon://less"
                    text="{i18n>btnDelete}"
                    type="Emphasized"
                    press="onDeletePosition"
                    visible="{Utility>/EnableEdit}"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <Table
                id="tblEditPosizioniScen1"
                mode="MultiSelect"
                items="{
                  path: 'Sop>/Position'
                }"
                selectionChange="onSelectedItemEdit"
                fixedLayout="false"
                growing="true"
            >
                <columns>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelAnnoRegDoc}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelBelnr}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelTipoDoc}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelDataDocBen}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelNDocBeneficiario}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelDenomBenDocCosto}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        visible="{= ${Sop>/ZspecieSop} === '1' ? true : false}"
                    >
                        <header>
                            <Text text="{i18n>labelImpLiquidato}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        visible="{= ${Sop>/ZspecieSop} === '1' ? true : false}"
                    >
                        <header>
                            <Text text="{i18n>labelImpOrdinato}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        visible="{= ${Sop>/ZspecieSop} === '2' ? true : false}"
                    >
                        <header>
                            <Text text="{i18n>labelImpLiqNonOrdinata}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        visible="{= ${Sop>/ZspecieSop} === '2' ? true : false}"
                    >
                        <header>
                            <Text text="{i18n>labelResiduoVersabile}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        visible="{= ${Sop>/ZspecieSop} === '2' ? true : false}"
                    >
                        <header>
                            <Text text="{i18n>labelResiduoEsigibile}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelImpDaOrd}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelProspetto}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelRigaProspetto}" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <ObjectIdentifier text="{Sop>AnnoRegDoc}" />
                            <ObjectIdentifier text="{Sop>Belnr}" />
                            <Text text="{Sop>Blart}" />
                            <Text
                                text="{
                                path: 'Sop>Bldat',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                  pattern: 'dd.MM.yyyy'
                                }
                              }"
                            />
                            <Text text="{Sop>Xblnr}" />
                            <Text text="{Sop>ZbenaltName}" />
                            <Text
                                text="{
                                path: 'Sop>Zimpliq',
                                formatter: '.formatter.convertImport'
                              }"
                            />
                            <Text
                                text="{
                                path: 'Sop>Zimppag',
                                formatter: '.formatter.convertImport'
                              }"
                            />
                            <Text
                                text="{
                                path: 'Sop>Zimpliq',
                                formatter: '.formatter.convertImport'
                              }"
                            />
                            <Text
                                text="{
                                path: 'Sop>Zresvers',
                                formatter: '.formatter.convertImport'
                              }"
                            />
                            <Text
                                text="{
                                path: 'Sop>Zresesig',
                                formatter: '.formatter.convertImport'
                              }"
                            />
                            <Input
                                id="iptImpDaOrdEdit"
                                change="onImpDaOrdinareChangeEdit"
                                type="Number"
                                value="{
                                path: 'Sop>Zimpdaord'
                              }"
                            />
                            <Text text="{Sop>Znumliq}" />
                            <Text text="{Sop>Zposizione}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <c:Fragment
                fragmentName="gestionesop.view.fragment.amm.table.CalculatorEdit"
                type="XML"
            />
        </content>
    </Panel>
</c:FragmentDefinition>
