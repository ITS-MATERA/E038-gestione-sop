<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Panel
        visible="{StepScenario>/wizard1Step2}"
        backgroundDesign="Transparent"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleTablePosizioniScen2}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <ScrollContainer>
                <Table
                    id="tblPosizioniScen2"
                    mode="MultiSelect"
                    items="{
                  path: 'PosizioniScen2>/'
                }"
                    selectionChange="onSelectedItem"
                    fixedLayout="false"
                    growing="true"
                    width="150%"
                >
                    <columns>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelAnnoRegDoc}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelBelnr}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelTipoDoc}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDataDocBen}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelNDocBeneficiario}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDenomBenDocCosto}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            visible="{= ${Sop>/ZspecieSop} === '1' ? true : false}"
                        >
                            <header>
                                <Text text="{i18n>labelImpQuotaDoc}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelImpLiquidabile}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            visible="{= ${Sop>/ZspecieSop} === '2' ? true : false}"
                        >
                            <header>
                                <Text text="{i18n>labelResiduoVersabile}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            visible="{= ${Sop>/ZspecieSop} === '2' ? true : false}"
                        >
                            <header>
                                <Text text="{i18n>labelResiduoEsigibile}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelImpDaOrd}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            visible="{= ${Sop>/ZspecieSop} === '1' ? true : false}"
                        >
                            <header>
                                <Text text="{i18n>labelDurc}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            visible="{= ${Sop>/ZspecieSop} === '1' ? true : false}"
                        >
                            <header>
                                <Text text="{i18n>labelFermoAmm}" />
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Text
                                    text="{
                                  path: 'PosizioniScen2>AnnoRegDoc'
                                }"
                                />
                                <Text text="{PosizioniScen2>Belnr}" />
                                <Text text="{PosizioniScen2>Blart}" />
                                <Text
                                    text="{
                                path: 'PosizioniScen2>Bldat',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                  pattern: 'dd.MM.yyyy'
                                }
                              }"
                                />
                                <Text
                                    text="{= ${PosizioniScen2>Xblnr} ? ${PosizioniScen2>Xblnr} : ${PosizioniScen2>Lxblnr}}"
                                />
                                <Text
                                    text="{= ${PosizioniScen2>ZbenaltName} ? ${PosizioniScen2>ZbenaltName} : ${PosizioniScen2>ZzragSoc}}"
                                />
                                <Text
                                    text="{
                                  path: 'PosizioniScen2>Wrbtr',
                                  formatter: '.formatter.convertImport'
                                }"
                                />
                                <Text
                                    text="{
                                  path: 'PosizioniScen2>Zimpres',
                                  formatter: '.formatter.convertImport'
                                }"
                                />
                                <Text
                                    text="{
                                path: 'PosizioniScen2>Zresvers',
                                  formatter: '.formatter.convertImport'
                                }"
                                />
                                <Text
                                    text="{
                                  path: 'PosizioniScen2>Zresesig',
                                  formatter: '.formatter.convertImport'
                                }"
                                />
                                <Input
                                    id="iptImpDaOrd"
                                    change="onImpDaOrdinareChange"
                                    type="Number"
                                    value="{
                                  path: 'PosizioniScen2>Zimpdaord'
                                }"
                                />
                                <Text
                                    text="{
                                  path: 'PosizioniScen2>Zdurc',
                                  formatter: '.formatter.deleteFirstZeros'
                                }"
                                />
                                <Text text="{PosizioniScen2>ZfermAmm}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
            <c:Fragment
                fragmentName="gestionesop.view.fragment.amm.table.Calculator"
                type="XML"
            />
        </content>
    </Panel>
</c:FragmentDefinition>
