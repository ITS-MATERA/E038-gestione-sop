<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Panel
        visible="{= ${StepScenario>/wizard1Step2} &amp;&amp; ${Utility>/Table} === 'Add' ? true : false}"
        backgroundDesign="Transparent"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleTablePosizioniScen1}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <ScrollContainer>
                <Table
                    id="tblPosizioniScen3"
                    mode="MultiSelect"
                    items="{
                  path: 'PosizioniScen3>/'
                }"
                    selectionChange="onSelectedItem"
                    fixedLayout="false"
                    growing="true"
                    width="150%"
                >
                    <columns>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelProspetto}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelRigaProspetto}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDescProspetto}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelBelnr}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelImpLiquidato}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelImpOrdinato}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelImpDaOrd}" />
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Text
                                    text="{
                                  path: 'PosizioniScen3>Znumliq'
                                }"
                                />
                                <Text text="{PosizioniScen3>Zposizione}" />
                                <Text text="{PosizioniScen3>ZdescProsp}" />
                                <Text text="{PosizioniScen3>Belnr}" />
                                <Text
                                    text="{
                                  path: 'PosizioniScen3>Zimpliq',
                                  formatter: '.formatter.convertImport'
                                }"
                                />
                                <Text
                                    text="{
                                  path: 'PosizioniScen3>Zimppag',
                                  formatter: '.formatter.convertImport'
                                }"
                                />
                                <Input
                                    id="iptImpDaOrd"
                                    change="onImpDaOrdinareChangeAdd"
                                    type="Number"
                                    enabled="false"
                                    value="{
                                  path: 'PosizioniScen3>Zimpdaord'
                                }"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
            <c:Fragment
                fragmentName="gestionesop.view.fragment.amm.table.CalculatorAdd"
                type="XML"
            />
        </content>
    </Panel>
</c:FragmentDefinition>
