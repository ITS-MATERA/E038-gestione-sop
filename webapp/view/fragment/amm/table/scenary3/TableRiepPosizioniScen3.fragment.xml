<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Panel
        visible="{StepScenario>/wizard1Step3}"
        backgroundDesign="Transparent"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleRiepilogoPosizioniScen3}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <ScrollContainer>
                <Table
                    items="{
                  path: 'Sop>/Position'
                }"
                    fixedLayout="false"
                    growing="true"
                    width="150%"
                >
                    <columns>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelProspetto}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelRigaProspetto}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDescProspetto}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelBelnr}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelImpDaOrd}" />
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            vAlign="Middle"
                            class="bgNotEditable"
                        >
                            <cells>
                                <Text text="{Sop>Znumliq}" />
                                <Text text="{Sop>Zposizione}" />
                                <Text text="{Sop>ZdescProsp}" />
                                <Text text="{Sop>Belnr}" />
                                <Text
                                    text="{
                                  path: 'Sop>Zimpdaord',
                                  formatter: '.formatter.convertImport'
                                }"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
            <c:Fragment
                fragmentName="gestionesop.view.fragment.amm.table.CalculatorNoEditable"
                type="XML"
            />
        </content>
    </Panel>
</c:FragmentDefinition>
