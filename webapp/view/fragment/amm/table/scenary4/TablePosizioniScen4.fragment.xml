<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Panel
        visible="{StepScenario>/wizard1Step2}"
        backgroundDesign="Transparent"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleWizard1RiepScen4}" />
                <ToolbarSpacer />
                <Button
                    id="btnExport"
                    icon="sap-icon://excel-attachment"
                    text="{i18n>btnExport}"
                    type="Emphasized"
                    press="onExportScen4"
                />
            </OverflowToolbar>
        </headerToolbar>
        <ScrollContainer>
            <content>
                <Table
                    id="tblPosizioniScen4"
                    items="{
                      path: 'Sop>/Position'
                    }"
                    fixedLayout="false"
                    width="150%"
                    growing="true"
                >
                    <columns>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelTipoDocumento}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDataDocumento}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDataCompetenza}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDenomBeneficiarioLiq}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelModPagamento}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelIban}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDurc}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelFermoAmm}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelImpLiquidazione}" />
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            vAlign="Middle"
                            class="bgNotEditable"
                        >
                            <cells>
                                <Text text="{Sop>Blart}" />
                                <Text
                                    text="{
                                      path: 'Sop>Bldat',
                                      type: 'sap.ui.model.type.Date',
                                      formatOptions: {
                                        pattern: 'dd.MM.yyyy'
                                      }
                                    }"
                                />
                                <Text
                                    text="{
                                    path: 'Sop>Bldat',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: {
                                      pattern: 'dd.MM.yyyy'
                                    }
                                  }"
                                />
                                <Text text="{Sop>ZbenaltName}" />
                                <Text text="{Sop>Zdescwels}" />
                                <Text text="{Sop>Iban}" />
                                <Text
                                    text="{
                                      path: 'Sop>Zdurc',
                                      formatter: '.formatter.deleteFirstZeros'
                                    }"
                                />
                                <Text text="{Sop>ZfermAmm}" />
                                <Text
                                    text="{
                                      path: 'Sop>Zimptot',
                                      formatter: '.formatter.convertImport'
                                    }"
                                    textAlign="End"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </content>
        </ScrollContainer>
    </Panel>
</c:FragmentDefinition>
