<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:zcontrolPosFin="zsap.com.r3.cobi.s4.custposfin.z_s4_zposfinlink.controls"
    xmlns:zcontrollinkSar="custlinksar.custlinksar.controls"
>
    <!-- class="removePanelPaddingBottom" -->
    <Panel
        backgroundDesign="Transparent"
        class="sapUiNoContentPadding"
    >
        <l:Grid
            defaultSpan="XL10 L12 M12 S12"
            class="sapUiSmallMarginTop"
            vSpacing="0"
        >
            <HBox>
                <items>
                    <Title
                        text="{i18n>titleDatiSop}"
                        class="sapUiTinyMarginBottom"
                    />
                </items>
                <layoutData>
                    <l:GridData span="XL12 L12 M12 S12" />
                </layoutData>
            </HBox>
            <!-- #region RIGA 1 -->
            <HBox>
                <Label
                    text="{i18n>labelEsercizioGestione}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Gjahr}" />
                <layoutData>
                    <l:GridData span="XL2 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelImporto}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zimptot}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelAmministrazione}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zzamministr}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelUfficio}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/ZufficioCont}" />
                <layoutData>
                    <l:GridData span="XL2 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelRagioneriaDestinataria}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zragdest}" />
                <layoutData>
                    <l:GridData span="XL2 L4 M6 S12" />
                </layoutData>
            </HBox>
            <!-- #endregion -->
            <!-- #region RIGA 2 -->
            <HBox>
                <Label
                    text="{i18n>labelNomeBen}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/NameFirst}" />
                <layoutData>
                    <l:GridData
                        span="XL2 L4 M6 S12"
                        linebreak="true"
                    />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelCognomeBen}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/NameLast}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelRagSoc}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/ZzragSoc}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelCFBen}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/TaxnumCf}" />
                <layoutData>
                    <l:GridData span="XL2 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelPIvaBen}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Taxnum}" />
                <layoutData>
                    <l:GridData span="XL2 L4 M6 S12" />
                </layoutData>
            </HBox>
            <!-- #endregion -->
            <!-- #region RIGA 3 -->
            <HBox>
                <Label
                    text="{i18n>labelRitenuta}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Text40}" />
                <layoutData>
                    <l:GridData
                        span="XL2 L4 M6 S12"
                        linebreak="true"
                    />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelEnteBeneficiario}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/ZzDescebe}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelPosFinanziaria}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <zcontrolPosFin:LinkPosizioneFinanziaria
                    id="linkPosFinSpesa"
                    anno="{Sop>/Gjahr}"
                    eos="S"
                    fikrs="{Sop>/Bukrs}"
                    fase="GEST"
                    reale="R"
                    versione="D"
                    fipex="{Sop>/Fipos}"
                    datbis="99991231"
                    text="{Sop>/Fipos}"
                    semanticObject="ESAMINAMODIFICA"
                />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelFistlBreve}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <zcontrollinkSar:LinkSar
                    id="linkSarBilancio"
                    anno="{Sop>/Gjahr}"
                    eos="E"
                    fikrs="{Sop>/Bukrs}"
                    fase="GEST"
                    SEM_OBJ=""
                    reale="R"
                    versione="D"
                    bilancio=""
                    fictr="{Sop>/Fistl}"
                    datbis="99991231"
                    text="{Sop>/Fistl}"
                />
                <layoutData>
                    <l:GridData span="XL2 L4 M6 S12" />
                </layoutData>
            </HBox>
            <!-- #endregion -->
            <!-- #region RIGA 4 -->
            <HBox>
                <Label
                    text="{i18n>labelProvv}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zprovgiud}" />
                <layoutData>
                    <l:GridData
                        span="XL2 L4 M6 S12"
                        linebreak="true"
                    />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelCausale}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zcausale}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelTipoSop}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/ZztipologiaSop}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelSpecieSop}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/DescZspecieSop}" />
                <layoutData>
                    <l:GridData span="XL2 L4 M6 S12" />
                </layoutData>
            </HBox>
            <!-- #endregion -->
            <Button
                visible="false"
                text="{i18n>btnEdit}"
                icon="sap-icon://edit"
                press="onEdit"
                type="Emphasized"
            >
                <layoutData>
                    <l:GridData
                        span="XL1 L2 M1 S12"
                        indent="XL1 L6 M10"
                    />
                </layoutData>
            </Button>
        </l:Grid>
    </Panel>
</c:FragmentDefinition>
