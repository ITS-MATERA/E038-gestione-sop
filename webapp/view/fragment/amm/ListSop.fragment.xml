<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:zcontrolPosFin="zsap.com.r3.cobi.s4.custposfin.z_s4_zposfinlink.controls"
    xmlns:zcontrollinkSar="custlinksar.custlinksar.controls"
>
    <Panel
        backgroundDesign="Transparent"
        class="onlyTopPadding"
    >
        <Panel
            backgroundDesign="Transparent"
            id="pnlListSop"
            visible="false"
        >
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="{i18n>titleListSop}" />
                    <ToolbarSpacer />
                    <Button
                        text="{i18n>btnDetail}"
                        type="Emphasized"
                        icon="sap-icon://sys-find"
                        press="onDetail"
                        enabled="{= ${Utility>/EnabledBtnDetail} &amp;&amp; ${AuthorityCheck>/Dettaglio} ? true : false}"
                    />
                    <Button
                        text="{i18n>btnExport}"
                        type="Emphasized"
                        icon="sap-icon://excel-attachment"
                        press="onExport"
                    />
                </OverflowToolbar>
            </headerToolbar>
            <ScrollContainer>
                <Table
                    id="tblListSop"
                    mode="SingleSelectLeft"
                    fixedLayout="false"
                    growing="true"
                    selectionChange="onSelectedItem"
                    items="{
						path: 'ListSop>/'
					}"
                    width="125%"
                >
                    <columns>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelChiaveSop}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDataRegSop}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelDenomBenDocCostoBrev}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelRitenuta}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelEnteBeneficiario}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelPosFinanziaria}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelFistl}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelImporto}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelCausale}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelTipoSop}" />
                            </header>
                        </Column>
                        <Column
                            minScreenWidth="Desktop"
                            demandPopin="true"
                        >
                            <header>
                                <Text text="{i18n>labelStatoSop}" />
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <ObjectIdentifier text="{ListSop>Zchiavesop}" />
                                <Text
                                    text="{
									path: 'ListSop>Zdatasop',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										pattern: 'dd.MM.yyyy'
									}
								}"
                                />
                                <Text text="{ListSop>DescLifnr}" />
                                <Text text="{ListSop>DescWitht}" />
                                <Text text="{ListSop>ZzDescebe}" />
                                <zcontrolPosFin:LinkPosizioneFinanziaria
                                    id="linkPosFinSpesa"
                                    anno="{ListSop>Gjahr}"
                                    eos="S"
                                    fikrs="{ListSop>Bukrs}"
                                    fase="GEST"
                                    reale="R"
                                    versione="D"
                                    fipex="{ListSop>Fipos}"
                                    datbis="99991231"
                                    text="{ListSop>Fipos}"
                                    semanticObject="ESAMINAMODIFICA"
                                />
                                <zcontrollinkSar:LinkSar
                                    id="linkSarBilancio"
                                    anno="{ListSop>Gjahr}"
                                    eos="E"
                                    fikrs="{ListSop>Bukrs}"
                                    fase="GEST"
                                    SEM_OBJ=""
                                    reale="R"
                                    versione="D"
                                    bilancio=""
                                    fictr="{ListSop>Fistl}"
                                    datbis="99991231"
                                    text="{ListSop>Fistl}"
                                />
                                <Text
                                    text="{
									path: 'ListSop>Zimptot',
									formatter: '.formatter.convertImport'
								}"
                                />
                                <Text text="{ListSop>Zcausale}" />
                                <Text text="{ListSop>DescTipologia}" />
                                <Text text="{ListSop>DescStatosop}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </Panel>
    </Panel>
</c:FragmentDefinition>
