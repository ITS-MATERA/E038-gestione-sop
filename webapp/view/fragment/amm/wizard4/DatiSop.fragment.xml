<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:zcontrolmccross="acn.zmatchcodecross.controls"
>
    <Panel>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelNumProtocollo}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M4 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{Sop>/Znumprot}"
                    maxLength="7"
                    type="Number"
                    editable="{Utility>/EnableEdit}"
                >
                    <layoutData>
                        <l:GridData span="XL1 L2 M2 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelDataProtocollo}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M4 S12"
                            indent="XL4"
                        />
                    </layoutData>
                </Text>
                <DatePicker
                    valueFormat="yyyy-MM-dd"
                    displayFormat="dd.MM.yyyy"
                    value="{
                      path: 'Sop>/Zdataprot',
                      type: 'sap.ui.model.type.Date',
                      formatOptions: {
                        pattern: 'dd.MM.yyyy'
                      }
                    }"
                    editable="{Utility>/EnableEdit}"
                    maxDate="{Utility>/CurrentDate}"
                >
                    <layoutData>
                        <l:GridData span="XL1 L2 M2 S12" />
                    </layoutData>
                </DatePicker>
                <Label
                    text="{i18n>labelLocalitaPagamento}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    required="true"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M4 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Label>

                <zcontrolmccross:MatchcodeCross
                    id="iptLocalitaPagamento"
                    viewId="{Utility>/ViewId}"
                    whichMC="LocalitaPagamento"
                    value="{Sop>/Zlocpag}"
                    editable="{Utility>/EnableEdit}"
                    change="onLocPagamentoChange"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L2 M8 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>

                <Label
                    text="{i18n>labelCausalePagamento}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    required="true"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M4 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Label>
                <TextArea
                    maxLength="100"
                    value="{Sop>/Zcausale}"
                    width="100%"
                    cols="100"
                    editable="{Utility>/EnableEdit}"
                >
                    <layoutData>
                        <l:GridData span="XL8 L7 M8 S12" />
                    </layoutData>
                </TextArea>
                <Text
                    text="{i18n>labelE2EID}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M4 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <TextArea
                    maxLength="35"
                    value="{Sop>/ZE2e}"
                    width="100%"
                    cols="100"
                    editable="{Utility>/EnableEdit}"
                >
                    <layoutData>
                        <l:GridData span="XL8 L7 M8 S12" />
                    </layoutData>
                </TextArea>
                <Label
                    text="{i18n>labelZonaIntervento}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    required="true"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M4 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Label>
                <zcontrolmccross:MatchcodeCross
                    id="iptZonaIntervento"
                    viewId="{Utility>/ViewId}"
                    whichMC="ZonaIntervento"
                    value="{Sop>/Zzonaint}"
                    editable="{Utility>/EnableEdit}"
                    valueHelpOnly="true"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M4 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>
            </l:Grid>
        </content>
    </Panel>
</c:FragmentDefinition>
