<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:zcontrolmccross="acn.zmatchcodecross.controls"
>
    <Panel backgroundDesign="Transparent">
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleRicBeneficiario}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelTipo}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <ComboBox
                    width="100%"
                    items="{
                      path: '/TipoBeneficiarioMcSet'
                    }"
                    selectedKey="{BeneficiarioRettifica>/Type}"
                    editable="false"
                >
                    <c:Item
                        key="{Type}"
                        text="{Description}"
                    />
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </ComboBox>
                <Text
                    text="{i18n>labelBeneficiario}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{BeneficiarioRettifica>/Lifnr}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelNome}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{BeneficiarioRettifica>/Znomebensosp}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCognome}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{BeneficiarioRettifica>/Zcognomebensosp}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelRagSoc}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{BeneficiarioRettifica>/Zragsocbensosp}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelCF}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{BeneficiarioRettifica>/Taxnumcf}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCFE}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{BeneficiarioRettifica>/Taxnumxl}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelPIVA}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{BeneficiarioRettifica>/Taxnum}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
    </Panel>
</c:FragmentDefinition>
