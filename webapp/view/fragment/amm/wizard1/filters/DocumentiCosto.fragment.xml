<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:zcontrolmccross="acn.zmatchcodecross.controls"
>
    <Panel
        backgroundDesign="Transparent"
        visible="{= ${Sop>/Ztipopag} === '1' || ${Sop>/Ztipopag} === '2' ? true : false}"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleRicDocumentoCosto}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelUffContabile}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{FiltersWizard1>/FkberLong}"
                    maxLength="16"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelUffPagatore}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{FiltersWizard1>/ZzuffPag}"
                    maxLength="16"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelAnnoRegDoc}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <MultiComboBox
                    items="{
						path: '/AnnoRegDocumentoMcSet'
					}"
                    selectedKeys="{FiltersWizard1>/AnnoRegDoc}"
                >
                    <c:Item
                        key="{Gjahr}"
                        text="{Gjahr}"
                    />
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </MultiComboBox>
                <Text
                    text="{i18n>labelBelnrFrom}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    valueHelpRequest="onValueHelpNRegDocumento"
                    showValueHelp="true"
                    app:PropertyModel="BelnrFrom"
                    value="{FiltersWizard1>/BelnrFrom}"
                    maxLength="10"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelBelnrTo}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    valueHelpRequest="onValueHelpNRegDocumento"
                    showValueHelp="true"
                    app:PropertyModel="BelnrTo"
                    value="{FiltersWizard1>/BelnrTo}"
                    maxLength="10"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelAnnoDocBen}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <MultiComboBox
                    items="{
						path: 'AnnoDocBeneficiario>/'
					}"
                    selectedKeys="{FiltersWizard1>/AnnoDocBen}"
                    enabled="{= ${Sop>/Zlifnrric} ? true : false}"
                >
                    <c:Item
                        key="{AnnoDocBeneficiario>Gjahr}"
                        text="{AnnoDocBeneficiario>Gjahr}"
                    />
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </MultiComboBox>
                <Text
                    text="{i18n>labelNDocBeneficiario}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <MultiInput
                    valueHelpRequest="onValueHelpNDocBene"
                    showValueHelp="true"
                    value="{FiltersWizard1>/Xblnr}"
                    change="onNDocBeneChange"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </MultiInput>
                <Text
                    text="{i18n>labelBenDocCosto}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <zcontrolmccross:MatchcodeCross
                    id="iptBeneficiarioDocCosto"
                    whichMC="Beneficiario"
                    value="{FiltersWizard1>/Zbenalt}"
                    maxLength="10"
                    liveChange="onBeneficiarioDocCostoChange"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>
            </l:Grid>
        </content>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelCig}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{FiltersWizard1>/Cig}"
                    maxLength="20"
                    showValueHelp="true"
                    valueHelpRequest="onValueHelpCigFilter"
                    editable="{= ${Sop>/ZspecieSop} === '2' ? false : true}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCup}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <Input
                    showValueHelp="true"
                    value="{FiltersWizard1>/Cup}"
                    maxLength="15"
                    valueHelpRequest="onValueHelpCupFilter"
                    editable="{= ${Sop>/ZspecieSop} === '2' ? false : true}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelScadenzaDocFrom}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <DatePicker
                    valueFormat="yyyy-MM-dd"
                    displayFormat="dd.MM.yyyy"
                    value="{
						path: 'FiltersWizard1>/NetdtFrom',
						type: 'sap.ui.model.type.Date',
						formatOptions: {
							pattern: 'dd.MM.yyyy'
						}
					}"
                    editable="{= ${Sop>/ZspecieSop} === '2' ? false : true}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </DatePicker>
                <Text
                    text="{i18n>labelScadenzaDocTo}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </Text>
                <DatePicker
                    valueFormat="yyyy-MM-dd"
                    displayFormat="dd.MM.yyyy"
                    value="{
						path: 'FiltersWizard1>/NetdtTo',
						type: 'sap.ui.model.type.Date',
						formatOptions: {
							pattern: 'dd.MM.yyyy'
						}
					}"
                    editable="{= ${Sop>/ZspecieSop} === '2' ? false : true}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </layoutData>
                </DatePicker>
            </l:Grid>
        </content>
    </Panel>
</c:FragmentDefinition>
