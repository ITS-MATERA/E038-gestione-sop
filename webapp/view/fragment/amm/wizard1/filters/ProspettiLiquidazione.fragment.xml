<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:zcontrolmccross="acn.zmatchcodecross.controls"
>
    <Panel
        backgroundDesign="Transparent"
        visible="{= ${Soa>/Ztipopag} === '1' || ${Soa>/Ztipopag} === '3' || ${Soa>/Ztipopag} === '4' ? true : false}"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleRicProspettiLiquidazione}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelEseContabile}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <ComboBox
                    width="100%"
                    items="{
						path: '/GjahrMcSet'
					}"
                    selectedKey="{FiltersWizard1>/Gjahr}"
                >
                    <c:Item
                        key="{Gjahr}"
                        text="{Gjahr}"
                    />
                    <layoutData>
                        <l:GridData span="XL2 L2 M5 S12" />
                    </layoutData>
                </ComboBox>
                <Text
                    text="{i18n>labelUffLiquidatore}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <MultiInput
                    valueHelpRequest="onValueHelpUffLiquidatore"
                    showValueHelp="true"
                    value="{FiltersWizard1>/Zuffliq}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </MultiInput>
                <Text
                    text="{i18n>labelNProspettoLiquidazioneFrom}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>

                <zcontrolmccross:MatchcodeCross
                    id="iptNProspLiquidazioneFrom"
                    viewId="{Utility>/ViewId}"
                    whichMC="ProspettoLiquidazione"
                    value="{FiltersWizard1>/ZnumliqFrom}"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>
            </l:Grid>
        </content>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelNProspettoLiquidazioneTo}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>

                <zcontrolmccross:MatchcodeCross
                    id="iptNProspLiquidazioneTo"
                    viewId="{Utility>/ViewId}"
                    whichMC="ProspettoLiquidazione"
                    value="{FiltersWizard1>/ZnumliqTo}"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>
                <Text
                    text="{i18n>labelDescProspettoLiquidazione}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L12 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    valueHelpRequest="onValueHelpDescProspLiquidazione"
                    showValueHelp="true"
                    value="{FiltersWizard1>/ZdescProsp}"
                >
                    <layoutData>
                        <l:GridData span="XL4 L12 M12 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
    </Panel>
</c:FragmentDefinition>
