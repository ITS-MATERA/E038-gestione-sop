<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:zcontrolanagrafica="acn.zlibanagrafica.controls"
    xmlns:zcontrolmodpag="acn.zlibmodpag.controls"
    xmlns:zcontrolmccross="acn.zmatchcodecross.controls"
>
    <Panel backgroundDesign="Transparent">
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleBeneficiario}" />
                <ToolbarSpacer />
                <zcontrolanagrafica:AnagraficaPopup
                    viewId="{Utility>/ViewId}"
                    enabled="true"
                />
                <zcontrolmodpag:ModPagamentoPopup
                    viewId="{Utility>/ViewId}"
                    Lifnr="{Sop>/Lifnr}"
                    enabled="false"
                />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelBeneficiario}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <zcontrolmccross:MatchcodeCross
                    id="iptBeneficiarioWizard1"
                    whichMC="Beneficiario"
                    viewId="{Utility>/ViewId}"
                    value="{Sop>/Lifnr}"
                    maxLength="10"
                    change="onBeneficiarioChange"
                    editable="{Utility>/EnableEdit}"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M6 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>
                <RadioButtonGroup
                    columns="2"
                    editable="false"
                >
                    <RadioButton
                        text="{i18n>rbPersonaFisica}"
                        selected="{= ${Sop>/BuType} === '1' ? true : false }"
                    />
                    <RadioButton
                        text="{i18n>rbPersonaGiuridica}"
                        selected="{= ${Sop>/BuType} === '2' || ${Sop>/BuType} === '3' ? true : false }"
                    />
                    <layoutData>
                        <l:GridData
                            span="XL7 L6 M12 S12"
                            indent="XL1"
                        />
                    </layoutData>
                </RadioButtonGroup>
                <Text
                    text="{i18n>labelCF}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/TaxnumCf}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCFE}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            indent="XL1"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/Taxnumxl}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelNome}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/NameFirst}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCognome}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            indent="XL1"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/NameLast}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelRagSoc}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/ZzragSoc}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelPIVA}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            indent="XL1"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/Taxnum}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Label
                    text="{i18n>labelModPagamento}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    required="true"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Label>
                <ComboBox
                    width="100%"
                    items="{
                      path: 'ModalitaPagamento>/'
                    }"
                    selectedKey="{Sop>/Zwels}"
                    editable="{= ${Sop>/Lifnr} &amp;&amp; ${Utility>/EnableEdit} ? true : false}"
                    selectionChange="onModalitaPagamentoChange"
                >
                    <c:Item
                        key="{ModalitaPagamento>Zwels}"
                        text="{ModalitaPagamento>Zdescwels}"
                    />
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </ComboBox>
                <Label
                    text="{i18n>labelIban}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    required="true"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            indent="XL1"
                        />
                    </layoutData>
                </Label>

                <zcontrolmccross:MatchcodeCross
                    id="iptIban4"
                    viewId="{Utility>/ViewId}"
                    whichMC="Iban"
                    Lifnr="{Sop>/Lifnr}"
                    value="{Sop>/Iban}"
                    Zwels="{Sop>/Zwels}"
                    editable="{= 
                      ${Sop>/Zwels} !== '' &amp;&amp; 
                      ${Sop>/Zwels} !== 'ID1' &amp;&amp; 
                      ${Sop>/Zwels} !== 'ID2'  &amp;&amp; 
                      ${Sop>/Zwels} !== 'ID3'  &amp;&amp; 
                      ${Sop>/Zwels} !== 'ID4' &amp;&amp;
                      ${Sop>/Lifnr} !== '' &amp;&amp;
                      ${Utility>/EnableEdit} ? true : false
                    }"
                    change="onIbanChange"
                    maxLength="34"
                >
                    <zcontrolmccross:layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </zcontrolmccross:layoutData>
                </zcontrolmccross:MatchcodeCross>
                <Text
                    text="{i18n>labelDurc}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{
                      path: 'Sop>/Zdurc',
                      formatter: '.formatter.deleteFirstZeros'
                    }"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelFermoAmm}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            indent="XL1"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/ZfermAmm}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
    </Panel>
</c:FragmentDefinition>
