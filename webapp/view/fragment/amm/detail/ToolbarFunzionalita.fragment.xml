<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Button
        text="{i18n>btnAnnullamentoSop}"
        type="Emphasized"
        enabled="{= ${Sop>/ZcodStatosop} === '00' &amp;&amp; ${AuthorityCheck>/Annullamento} ? true : false}"
        visible="{= ${Utility>/RemoveFunctionButtons} === false ? true : false}"
        press="onAnnulla"
    />
    <Button
        text="{i18n>btnInvioFirma}"
        type="Emphasized"
        enabled="{= ${Sop>/ZcodStatosop} === '00' &amp;&amp; ${AuthorityCheck>/InvioFirma} ? true : false}"
        visible="{= ${Utility>/RemoveFunctionButtons} === false || ${Utility>/Function} === 'InvioFirma' ? true : false}"
        press="onInviaFirma"
    />
    <Button
        text="{i18n>btnRevocaInvioFirma}"
        type="Emphasized"
        enabled="{= ${Sop>/ZcodStatosop} === '01' &amp;&amp; ${AuthorityCheck>/RevocaInvioFirma} ? true : false}"
        visible="{= ${Utility>/RemoveFunctionButtons} === false || ${Utility>/Function} === 'RevocaInvioFirma' ? true : false}"
        press="onRevocaInvioFirma"
    />
    <Button
        text="{i18n>btnFirmaSop}"
        type="Emphasized"
        enabled="{= ${Sop>/ZcodStatosop} === '01' &amp;&amp; ${AuthorityCheck>/Firma} ? true : false}"
        visible="{= ${Utility>/RemoveFunctionButtons} === false || ${Utility>/Function} === 'Firma' ? true : false}"
        press="onFirma"
    />
    <Button
        text="{i18n>btnRichiamo}"
        type="Emphasized"
        enabled="{= 
            ( ${Sop>/ZcodStatosop} === '03' ||
            ${Sop>/ZcodStatosop} === '06' ||
            ${Sop>/ZcodStatosop} === '04' ||
            ${Sop>/ZcodStatosop} === '09' ) &amp;&amp; ${AuthorityCheck>/Richiamo}? true : false

        }"
        visible="{= ${Utility>/RemoveFunctionButtons} === false || ${Utility>/Function} === 'Richiamo' ? true : false}"
        press="onRichiamo"
    />
    <Button
        text="{i18n>btnRegistraRichiestaAnnullamento}"
        type="Emphasized"
        enabled="{=             
            (
                ${Sop>/ZcodStatosop} === '10' ||
                ${Sop>/ZcodStatosop} === '16'
            ) &amp;&amp;
            ${Sop>/Zricann} === '0000000' &amp;&amp; ${AuthorityCheck>/RegRichiestaAnn} ? true : false}"
        visible="{= ${Utility>/RemoveFunctionButtons} === false || ${Utility>/Function} === 'RegistrazioneRichAnn' ? true : false}"
        press="onRegistraRichAnn"
    />
    <Button
        text="{i18n>btnCancellazioneRichiestaAnnullamento}"
        type="Emphasized"
        enabled="{=             
            (
                ${Sop>/ZcodStatosop} === '10' ||
                ${Sop>/ZcodStatosop} === '16'
            ) &amp;&amp;
            ${Sop>/Zricann} !== '0000000' &amp;&amp; ${AuthorityCheck>/CancRichiestaAnn} ? true : false}"
        visible="{= ${Utility>/RemoveFunctionButtons} === false || ${Utility>/Function} === 'CancellazioneRichAnn' ? true : false}"
        press="onCancellaRichAnn"
    />
</c:FragmentDefinition>
