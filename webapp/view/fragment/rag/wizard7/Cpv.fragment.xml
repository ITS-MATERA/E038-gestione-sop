<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Panel
        class="sapUiNoContentPadding"
        backgroundDesign="Transparent"
        visible="{= ${Sop>/ZspecieSop} === '1' ? true : false}"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleCpv}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <Table
                id="tblCpv"
                mode="None"
                fixedLayout="false"
                contextualWidth="Auto"
                growing="true"
                items="{
                  path: 'Classificazione>/Cpv'
                }"
            >
                <columns>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        width="35%"
                    >
                        <header>
                            <Text text="{i18n>labelCpv}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>labelDescCpv}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        width="32%"
                    >
                        <header>
                            <Text text="{i18n>labelImpDaAssociare}" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Input
                                width="65%"
                                value="{Classificazione>Zcpv}"
                                editable="false"
                            />
                            <Input
                                editable="false"
                                value="{Classificazione>ZcpvDesc}"
                            />
                            <Input
                                id="iptImpDaAssociareCpv"
                                width="30%"
                                value="{Classificazione>ZimptotClass}"
                                editable="false"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <Panel backgroundDesign="Transparent">
                <l:Grid
                    defaultSpan="XL12 L12 M12 S12"
                    class="calculator"
                >
                    <Text text="{i18n>labelImpTotCpv}">
                        <layoutData>
                            <l:GridData
                                span="XL3 L4 M5 S12"
                                indent="XL5 L4 M3"
                            />
                        </layoutData>
                    </Text>
                    <Text
                        text="{
                          path: 'Classificazione>/ImpTotAssociareCpv',
                          formatter: '.formatter.convertImport'
                        }"
                    >
                        <layoutData>
                            <l:GridData span="XL1 L1 M1 S12" />
                        </layoutData>
                    </Text>
                </l:Grid>
            </Panel>
        </content>
    </Panel>
</c:FragmentDefinition>
