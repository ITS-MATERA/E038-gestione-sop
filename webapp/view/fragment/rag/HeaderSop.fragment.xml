<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:zcontrollinkSar="custlinksar.custlinksar.controls"
    xmlns:zcontrolPosFin="zsap.com.r3.cobi.s4.custposfin.z_s4_zposfinlink.controls"
>
    <Panel
        backgroundDesign="Transparent"
        class="sapUiNoContentPadding"
    >
        <l:Grid
            defaultSpan="XL10 L12 M12 S12"
            class="sapUiSmallMarginTop"
            vSpacing="0"
        >
            <HBox>
                <items>
                    <Title
                        text="{i18n>titleDatiSop}"
                        class="sapUiTinyMarginBottom"
                    />
                </items>
                <layoutData>
                    <l:GridData span="XL12 L12 M12 S12" />
                </layoutData>
            </HBox>
            <!-- #region RIGA 1 -->
            <HBox>
                <Label
                    text="{i18n>labelEsercizioGestione}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Gjahr}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelChiaveSop}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zchiavesop}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelImporto}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zimptot}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelDataFirma}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text
                    text="{
                              path: 'Sop>/DataStato',
                              type: 'sap.ui.model.type.Date',
                              formatOptions: {
                                  pattern: 'dd.MM.yyyy'
                              }
                            }"
                />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <!-- #endregion -->
            <!-- #region RIGA 2 -->
            <HBox>
                <Label
                    text="{i18n>labelTipoSop}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/DescTipologia}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelSpecieSop}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/DescZspecieSop}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelStatoSop}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/DescStatosop}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelNomeBen}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Znomebensosp}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <!-- #endregion RIGA 2 -->
            <!-- #region RIGA 3 -->
            <HBox>
                <Label
                    text="{i18n>labelCognomeBen}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zcognomebensosp}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelRagSoc}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zragsocbensosp}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelCFBen}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Taxnumcf}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelPIvaBen}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Taxnum}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <!-- #endregion -->
            <!-- #region RIGA 4 -->
            <HBox>
                <Label
                    text="{i18n>labelRitenuta}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/DescWitht}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelEnteBeneficiario}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/ZzDescebe}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelProvv}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zprovgiud}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelCausale}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zcausale}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <!-- #endregion RIGA 5 -->
            <!-- #region RIGA 5 -->
            <HBox>
                <Label
                    text="{i18n>labelPosFinanziaria}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <zcontrolPosFin:LinkPosizioneFinanziaria
                    id="linkPosFinSpesa"
                    anno="{Sop>/Gjahr}"
                    eos="S"
                    fikrs="{Sop>/Bukrs}"
                    fase="GEST"
                    reale="R"
                    versione="D"
                    fipex="{Sop>/Fipos}"
                    datbis="99991231"
                    text="{Sop>/Fipos}"
                    semanticObject="ESAMINAMODIFICA"
                    wrapping="true"
                />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelFistlBreve}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <zcontrollinkSar:LinkSar
                    id="linkSarBilancio"
                    anno="{Sop>/Gjahr}"
                    eos="E"
                    fikrs="{Sop>/Bukrs}"
                    fase="GEST"
                    SEM_OBJ=""
                    reale="R"
                    versione="D"
                    bilancio=""
                    fictr="{Sop>/Fistl}"
                    datbis="99991231"
                    text="{Sop>/Fistl}"
                    wrapping="true"
                />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <HBox>
                <Label
                    text="{i18n>labelIdAutorizzazione}:"
                    class="sapUiTinyMarginEnd sapUiTinyMarginBottom"
                />
                <Text text="{Sop>/Zgeber}" />
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
            </HBox>
            <!-- #endregion -->
            <Button
                text="{i18n>btnRichiestaDocAgg}"
                icon="sap-icon://edit"
                type="Emphasized"
                enabled="{= ${Utility>/Function} === 'VerificaConferma' &amp;&amp; ${StepScenario>/Wizard7} ? true : false}"
                press="onRichiestaDocAgg"
                visible="{= ${Utility>/RemoveFunctionButtons} === true &amp;&amp; ${Utility>/EnableDocAggiuntiva} === true ? false : true}"
            >
                <layoutData>
                    <l:GridData
                        span="XL1 L2 M4 S12"
                        indent="XL1"
                    />
                </layoutData>
            </Button>
        </l:Grid>
    </Panel>
</c:FragmentDefinition>
