<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <IconTabBar
        class="sapUiNoContentPadding sapMITH"
        selectedKey="{Utility>/Function}"
        select="onIconTabChange"
        backgroundDesign="Transparent"
    >
        <items>
            <IconTabFilter
                key="Validazione"
                text="{i18n>iconTabValidazione}"
                icon="sap-icon://edit"
                visible="{Utility>/EnableValidazione}"
            />
            <IconTabSeparator visible="{Utility>/EnableValidazione}" />
            <IconTabFilter
                key="VerificaConferma"
                text="{i18n>iconTabVerifica}"
                icon="sap-icon://edit"
                visible="{Utility>/EnableVerificaConferma}"
            />
            <IconTabSeparator visible="{Utility>/EnableVerificaConferma}" />
            <IconTabFilter
                key="Dettaglio"
                text="{i18n>iconTabDetail}"
                icon="sap-icon://detail-view"
            />
            <IconTabSeparator />
            <IconTabFilter
                key="Workflow"
                text="{i18n>iconTabWorkflow}"
                icon="sap-icon://history"
            />
            <IconTabSeparator />
            <IconTabFilter
                key="FascicoloElettronico"
                text="{i18n>iconTabFascicoloElettronico}"
                icon="sap-icon://documents"
            />
        </items>
    </IconTabBar>
</c:FragmentDefinition>
