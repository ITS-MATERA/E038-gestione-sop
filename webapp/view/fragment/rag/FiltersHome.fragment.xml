<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:zcontrol="zsap.com.r3.cobi.s4.custposfin.z_s4_zposfin.controls"
    xmlns:zcontrolMatchSar="zsap.com.r3.cobi.s4.custapiuser.z_s4_userlog.controls"
    xmlns:zcontrolmccross="acn.zmatchcodecross.controls"
>
    <Panel
        backgroundDesign="Transparent"
        class="sapUiNoContentPadding"
    >
        <l:Grid
            defaultSpan="XL12 L12 M12 S12"
            vSpacing="0"
            class="sapUiSmallMargin"
        >
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label
                        text="{i18n>labelEsercizioGestione}:"
                        required="true"
                    />
                    <ComboBox
                        width="100%"
                        items="{
                          path: '/GjahrMcSet'
                        }"
                        selectedKey="{FiltersHome>/Gjahr}"
                    >
                        <c:Item
                            key="{Gjahr}"
                            text="{Gjahr}"
                        />
                    </ComboBox>
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelAmministrazione}:" />
                    <Input
                        value="{FiltersHome>/Zzamministr}"
                        maxLength="4"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelRagioneriaDestinataria}:" />
                    <Input
                        value="{FiltersHome>/Zragdest}"
                        valueHelpRequest="onValueHelpRagioneria"
                        showValueHelp="true"
                        maxLength="4"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelUfficioOrdinante}:" />
                    <Input
                        maxLength="16"
                        value="{FiltersHome>/ZufficioCont}"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelCapitolo}:" />
                    <Input
                        maxLength="4"
                        value="{FiltersHome>/Capitolo}"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelNSopFrom}:" />
                    <Input
                        maxLength="5"
                        value="{FiltersHome>/ZnumsopFrom}"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelNSopTo}:" />
                    <Input
                        maxLength="5"
                        value="{FiltersHome>/ZnumsopTo}"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelStatoSop}:" />
                    <ComboBox
                        width="100%"
                        items="{
                          path: '/StatoSopRagioneriaMcSet'
                        }"
                        selectedKey="{FiltersHome>/ZcodStatosop}"
                    >
                        <c:Item
                            key="{ZcodStatosop}"
                            text="{Descrizione}"
                        />
                    </ComboBox>
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelTipoSop}:" />
                    <ComboBox
                        width="100%"
                        items="{
                          path: '/TipologiaSopMcSet'
                        }"
                        selectedKey="{FiltersHome>/ZztipologiaSop}"
                    >
                        <c:Item
                            key="{ZztipologiaSop}"
                            text="{Descrizione}"
                        />
                    </ComboBox>
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelSpecieSop}:" />
                    <ComboBox
                        width="100%"
                        items="{
                          path: '/SpecieSopMcSet'
                        }"
                        selectedKey="{FiltersHome>/ZspecieSop}"
                    >
                        <c:Item
                            key="{ZspecieSop}"
                            text="{Descrizione}"
                        />
                    </ComboBox>
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelDataRegSopFrom}:" />
                    <DatePicker
                        valueFormat="yyyy-MM-dd"
                        displayFormat="dd.MM.yyyy"
                        value="{
                            path: 'FiltersHome>/ZdatasopFrom',
                            type: 'sap.ui.model.type.Date',
                            formatOptions: {
                                pattern: 'dd.MM.yyyy'
                            }
                        }"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelDataRegSopTo}:" />
                    <DatePicker
                        valueFormat="yyyy-MM-dd"
                        displayFormat="dd.MM.yyyy"
                        value="{
                            path: 'FiltersHome>/ZdatasopTo',
                            type: 'sap.ui.model.type.Date',
                            formatOptions: {
                                pattern: 'dd.MM.yyyy'
                            }
                        }"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelDataProtocolloRGS}:" />
                    <DatePicker
                        valueFormat="yyyy-MM-dd"
                        displayFormat="dd.MM.yyyy"
                        value="{
                            path: 'FiltersHome>/Zdataprotrgs',
                            type: 'sap.ui.model.type.Date',
                            formatOptions: {
                                pattern: 'dd.MM.yyyy'
                            }
                        }"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelNProtocolloRGS}:" />
                    <Input
                        value="{FiltersHome>/Znumprotrgs}"
                        maxLength="7"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelBeneficiario}:" />
                    <zcontrolmccross:MatchcodeCross
                        id="iptBeneficiario"
                        whichMC="Beneficiario"
                        value="{FiltersHome>/Lifnr}"
                        maxLength="10"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelRitenuta}:" />
                    <ComboBox
                        width="100%"
                        items="{
                          path: '/RitenutaMCSet'
                        }"
                        selectedKey="{FiltersHome>/Witht}"
                        selectionChange="onRitenutaChange"
                    >
                        <c:Item
                            key="{Witht}"
                            text="{DescRitenuta}"
                        />
                    </ComboBox>
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelEnteBeneficiario}:" />
                    <Input
                        value="{FiltersHome>/ZzDescebe}"
                        valueHelpRequest="onValueHelpEnteBeneficiario"
                        showValueHelp="true"
                        maxLength="40"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData
                        span="XL2 L3 M6 S12"
                        linebreak="true"
                    />
                </layoutData>
                <items>
                    <Label text="{i18n>labelPosFinanziariaFrom}:" />
                    <zcontrol:InputPosizioneFinanziaria
                        id="iptFiposFrom"
                        fase="GEST"
                        spesa="X"
                        reale="R"
                        anno="{FiltersHome>/Gjahr}"
                        versione="D"
                        maxSuggestionWidth="100%"
                        width="100%"
                        value="{FiltersHome>/FiposFrom}"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL2 L3 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelPosFinanziariaTo}:" />
                    <zcontrol:InputPosizioneFinanziaria
                        id="iptFiposTo"
                        fase="GEST"
                        spesa="X"
                        reale="R"
                        anno="{FiltersHome>/Gjahr}"
                        versione="D"
                        maxSuggestionWidth="100%"
                        width="100%"
                        value="{FiltersHome>/FiposTo}"
                    />
                </items>
            </VBox>
            <VBox>
                <layoutData>
                    <l:GridData span="XL3 L4 M6 S12" />
                </layoutData>
                <items>
                    <Label text="{i18n>labelFistl}:" />
                    <zcontrolMatchSar:GestioneLogUser
                        id="iptFistl"
                        eos="S"
                        fase="GEST"
                        entrata="X"
                        reale="R"
                        anno="{FiltersHome>/Gjahr}"
                        SEM_OBJ="Z_TEST_LIB"
                        versione="D"
                        width="100%"
                        placeholder="Scegli struttura amministrativa"
                        value="{FiltersHome>/Fistl}"
                    />
                </items>
            </VBox>
            <Button
                text="{i18n>btnStart}"
                width="100%"
                type="Emphasized"
                press="onSearch"
            >
                <layoutData>
                    <l:GridData
                        linebreak="true"
                        span="XL1 L1 M1 S12"
                        indent="XL11 L11 M11"
                    />
                </layoutData>
            </Button>
        </l:Grid>
    </Panel>
</c:FragmentDefinition>
