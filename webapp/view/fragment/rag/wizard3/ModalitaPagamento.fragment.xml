<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:zcontrolmccross="acn.zmatchcodecross.controls"
>
    <Panel backgroundDesign="Transparent">
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>titleModPagamento}" />
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <l:Grid
                defaultSpan="XL12 L12 M12 S12"
                hSpacing="0.5"
            >
                <Text
                    text="{i18n>labelModPagamento}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{Sop>/DescZwels}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>

                <Text
                    text="{i18n>labelPaeseResidenza}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    value="{Sop>/Banks}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL1 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCausaleValutaria}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            indent="XL1"
                        />
                    </layoutData>
                </Text>
                <Input
                    value="{Sop>/Zcausaleval}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelIban}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{Sop>/Iban}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelAlias}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    value="{Sop>/Zalias}"
                    editable="false"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelTipoConto}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                    editable="false"
                    value="{Sop>/AccTypeId}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelProvincia}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                    editable="false"
                    value="{Sop>/RegioConto}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelDescConto}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                    editable="false"
                    value="{Sop>/ZaccText}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelBic}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="{= ${Sop>/Zwels} === 'ID3' ? false : true}"
                        />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/Swift}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCoordEstere}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    value="{Sop>/Zcoordest}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelPosFinEntrate}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID4'}"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="true"
                        />
                    </layoutData>
                </Text>
                <Input
                    visible="{= ${Sop>/Zwels} === 'ID4'}"
                    value="{Sop>/Zzposfinent}"
                    editable="false"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelPurpose}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID6' || ${Sop>/Zwels} === 'ID10'}"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="{= ${Sop>/Zwels} === 'ID6' || ${Sop>/Zwels} === 'ID10'}"
                        />
                    </layoutData>
                </Text>
                <Input
                    visible="{= ${Sop>/Zwels} === 'ID6' || ${Sop>/Zwels} === 'ID10'}"
                    editable="false"
                    value="{Sop>/Zpurpose}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCategoryPurpose}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    value="{Sop>/Zcatpurpose}"
                    editable="false"
                    maxLength="5"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelFlagFruttInfrutt}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData
                            span="XL2 L3 M5 S12"
                            linebreak="{= ${Sop>/Zwels} === 'ID3'}"
                        />
                    </layoutData>
                </Text>
                <Input
                    value="{Sop>/DescFlagFruttifero}"
                    editable="false"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
                <Text
                    text="{i18n>labelCausaleBen}:"
                    class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Text>
                <Input
                    editable="false"
                    visible="{= ${Sop>/Zwels} === 'ID3' ? true : false}"
                    value="{Sop>/Zcausben}"
                >
                    <layoutData>
                        <l:GridData span="XL2 L3 M5 S12" />
                    </layoutData>
                </Input>
            </l:Grid>
        </content>
    </Panel>
</c:FragmentDefinition>
