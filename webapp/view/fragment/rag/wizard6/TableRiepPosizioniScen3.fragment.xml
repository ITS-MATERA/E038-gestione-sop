<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Table
        id="tblPosizioniScen3"
        items="{
                  path: 'Sop>/PositionAssociate'
                }"
        selectionChange="onSelectedItem"
        fixedLayout="false"
        growing="true"
        visible="{= ${Sop>/Ztipopag} === '3' ? true : false}"
    >
        <columns>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>labelProspetto}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>labelRigaProspetto}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>labelDescProspetto}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>labelBelnr}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>labelImpLiquidato}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>labelImpOrdinato}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>labelImpDaOrd}" />
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <Text
                        text="{
                                  path: 'Sop>Znumliq'
                                }"
                    />
                    <Text text="{Sop>Zposizione}" />
                    <Text text="{Sop>ZdescProsp}" />
                    <Text text="{Sop>Belnr}" />
                    <Text
                        text="{
                                  path: 'Sop>Zimpliq',
                                  formatter: '.formatter.convertImport'
                                }"
                    />
                    <Text
                        text="{
                                  path: 'Sop>Zimppag',
                                  formatter: '.formatter.convertImport'
                                }"
                    />
                    <Text
                        id="iptImpDaOrd"
                        text="{
                                  path: 'Sop>Zimpdaord',
                                  formatter: '.formatter.convertImport'
                                }"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</c:FragmentDefinition>
