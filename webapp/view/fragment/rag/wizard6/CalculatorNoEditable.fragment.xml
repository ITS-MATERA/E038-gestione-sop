<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <Panel
        backgroundDesign="Transparent"
        class="bgNotEditable"
        visible="{= ${Sop>/Ztipopag} === '4' ? false : true}"
    >
        <l:Grid
            defaultSpan="XL12 L12 M12 S12"
            class="bgNotEditable calculator"
        >
            <Text text="{i18n>labelCalculator}">
                <layoutData>
                    <l:GridData
                        span="XL2 L3 M4 S12"
                        indent="XL8 L5"
                    />
                </layoutData>
            </Text>
            <Input
                value="{
					path: 'Sop>/Zimptot',
					formatter: '.formatter.convertImport'
				}"
                editable="false"
            >
                <layoutData>
                    <l:GridData span="XL1 L2 M4 S12" />
                </layoutData>
            </Input>
        </l:Grid>
    </Panel>
</c:FragmentDefinition>
