<mvc:View
    controllerName="gestionesop.controller.rag.Detail"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:c="sap.ui.core"
>
    <f:DynamicPage
        showFooter="true"
        class="sapUiNoContentPadding"
        stickySubheaderProvider="wizDetail"
    >
        <f:header>
            <f:DynamicPageHeader
                class="noPadding"
                pinnable="false"
            >
                <Panel
                    class="sapUiNoContentPadding"
                    backgroundDesign="Transparent"
                >
                    <c:Fragment
                        fragmentName="gestionesop.view.fragment.rag.HeaderSop"
                        type="XML"
                    />
                    <c:Fragment
                        fragmentName="gestionesop.view.fragment.rag.IconTabBar"
                        type="XML"
                    />
                </Panel>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Panel
                class="sapUiNoContentPadding"
                backgroundDesign="Transparent"
            >
                <Wizard
                    id="wizDetail"
                    showNextButton="false"
                    class=".sapMWizardStepTitle sapMWizardStep"
                    visible="{= ${Utility>/Function} !== 'Workflow' ? true : false}"
                >
                    <WizardStep title="{i18n>titleWizard1Rag}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/Wizard1}"
                        >
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard1.DatiIdentificativi"
                                type="XML"
                            />
                        </Panel>
                    </WizardStep>
                    <WizardStep title="{i18n>titleWizard2Rag}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/Wizard2}"
                        >
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard2.DatiGenerali"
                                type="XML"
                            />
                        </Panel>
                    </WizardStep>
                    <WizardStep title="{i18n>titleWizard3Rag}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/Wizard3}"
                        >
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard3.Beneficiario"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard3.ModalitaPagamento"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard3.Quietanzante"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard3.Versante"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard3.BancaAccredito"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard3.Intermediario1"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard3.SedeBeneficiario"
                                type="XML"
                            />
                        </Panel>
                    </WizardStep>
                    <WizardStep title="{i18n>titleWizard4Rag}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/Wizard4}"
                        >
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard4.DatiContabili"
                                type="XML"
                            />
                        </Panel>
                    </WizardStep>
                    <WizardStep title="{i18n>titleWizard5Rag}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/Wizard5}"
                        >
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard5.TableDocumentiContabili"
                                type="XML"
                            />
                        </Panel>
                    </WizardStep>
                    <WizardStep title="{i18n>titleWizard6Rag}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/Wizard6}"
                        >
                            <headerToolbar>
                                <OverflowToolbar>
                                    <Title
                                        text="{i18n>titleRiepilogoPosizioniScen1}"
                                    />
                                </OverflowToolbar>
                            </headerToolbar>
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard6.TableRiepPosizioniScen1"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard6.TableRiepPosizioniScen2"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard6.TableRiepPosizioniScen3"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard6.TableRiepPosizioniScen4"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard6.CalculatorNoEditable"
                                type="XML"
                            />
                        </Panel>
                    </WizardStep>
                    <WizardStep title="{i18n>titleWizard7Rag}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/Wizard7}"
                        >
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard7.Cos"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard7.Cpv"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard7.Cig"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.rag.wizard7.Cup"
                                type="XML"
                            />
                        </Panel>
                    </WizardStep>
                </Wizard>
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.Workflow"
                    type="XML"
                />
            </Panel>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.rag.FooterToolbar"
                    type="XML"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
