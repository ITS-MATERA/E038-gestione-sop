<mvc:View
    controllerName="gestionesop.controller.amm.create.Scenary1"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:c="sap.ui.core"
>
    <f:DynamicPage
        showFooter="true"
        class="sapUiNoContentPadding"
    >
        <f:header>
            <f:DynamicPageHeader
                class="noPadding"
                pinnable="false"
            >
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.amm.HeaderSop"
                    type="XML"
                />
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Wizard
                id="wizScenario1"
                showNextButton="false"
            >
                <WizardStep title="{i18n>titleWizard1DocContabili}">
                    <Panel
                        class="sapUiNoContentPadding"
                        backgroundDesign="Transparent"
                        visible="{StepScenario>/wizard1Step1}"
                    >
                        <c:Fragment
                            fragmentName="gestionesop.view.fragment.amm.wizard1.filters.Ritenuta"
                            type="XML"
                        />
                        <c:Fragment
                            fragmentName="gestionesop.view.fragment.amm.wizard1.filters.Beneficiario"
                            type="XML"
                        />
                        <c:Fragment
                            fragmentName="gestionesop.view.fragment.amm.wizard1.filters.ProspettiLiquidazione"
                            type="XML"
                        />
                        <c:Fragment
                            fragmentName="gestionesop.view.fragment.amm.wizard1.filters.DocumentiCosto"
                            type="XML"
                        />
                    </Panel>
                    <c:Fragment
                        fragmentName="gestionesop.view.fragment.amm.table.scenary1.TablePosizioniScen1"
                        type="XML"
                    />
                    <c:Fragment
                        fragmentName="gestionesop.view.fragment.amm.table.scenary1.TableRiepPosizioniScen1"
                        type="XML"
                    />
                </WizardStep>
                <WizardStep title="{i18n>titleWizard2}">
                    <Panel
                        class="sapUiNoContentPadding"
                        backgroundDesign="Transparent"
                        visible="{StepScenario>/wizard2}"
                    >
                        <c:Fragment
                            fragmentName="gestionesop.view.fragment.amm.wizard2.Beneficiario"
                            type="XML"
                        />
                        <c:Fragment
                            fragmentName="gestionesop.view.fragment.amm.wizard2.ModalitaPagamento"
                            type="XML"
                        />
                        <c:Fragment
                            fragmentName="gestionesop.view.fragment.amm.wizard2.Quietanzante"
                            type="XML"
                        />
                        <c:Fragment
                            fragmentName="gestionesop.view.fragment.amm.wizard2.Versante"
                            type="XML"
                        />
                    </Panel>
                </WizardStep>
                <WizardStep title="{i18n>titleWizard3}" />
                <WizardStep title="{i18n>titleWizard4}" />
            </Wizard>
        </f:content>
        <f:footer>
            <c:Fragment
                fragmentName="gestionesop.view.fragment.amm.create.FooterToolbar"
                type="XML"
            />
        </f:footer>
    </f:DynamicPage>
</mvc:View>
