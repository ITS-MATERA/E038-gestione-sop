<mvc:View
    controllerName="gestionesop.controller.amm.Home"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:c="sap.ui.core"
>
    <f:DynamicPage
        showFooter="true"
        class="sapUiNoContentPadding"
    >
        <f:title>
            <f:DynamicPageTitle />
        </f:title>
        <f:header>
            <f:DynamicPageHeader class="noPadding">
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.amm.FiltersSop"
                    type="XML"
                />
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <c:Fragment
                fragmentName="gestionesop.view.fragment.amm.ListSop"
                type="XML"
            />
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <!-- TODO - Deploy -->
                <!-- <Button
                    type="Emphasized"
                    text="{i18n>btnCopy}"
                    press="onCopy"
                    enabled="{= ${Utility>/EnabledBtnCopy} &amp;&amp; ${AuthorityCheck>/Copia} ? true : false}"
                /> -->
                <Button
                    type="Emphasized"
                    text="{i18n>btnRegisterSop}"
                    press="onRegisterSop"
                    enabled="{AuthorityCheck>/Registra}"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
