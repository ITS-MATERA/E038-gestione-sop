<mvc:View
    controllerName="gestionesop.controller.amm.detail.Scenary1"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:c="sap.ui.core"
>
    <f:DynamicPage
        showFooter="true"
        class="sapUiNoContentPadding"
        stickySubheaderProvider="wizScenario1"
    >
        <f:title>
            <f:DynamicPageTitle
                visible="{= ${device>/resize/width} &lt; 1000 ? true : false}"
            />
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                class="noPadding"
                pinnable="false"
            >
                <Panel
                    class="sapUiNoContentPadding"
                    backgroundDesign="Transparent"
                >
                    <c:Fragment
                        fragmentName="gestionesop.view.fragment.amm.HeaderSopDetail"
                        type="XML"
                    />
                    <c:Fragment
                        fragmentName="gestionesop.view.fragment.amm.IconTabBar"
                        type="XML"
                    />
                </Panel>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <NavContainer>
                <pages>
                    <Page showHeader="false">
                        <content>
                            <Wizard
                                id="wizScenario1"
                                showNextButton="false"
                                visible="{= ${Utility>/Function} === 'Dettaglio' || ${Utility>/Function} === 'Rettifica' ? true : false}"
                            >
                                <WizardStep
                                    title="{i18n>titleWizard1DocContabili}"
                                >
                                    <Panel
                                        class="sapUiNoContentPadding"
                                        backgroundDesign="Transparent"
                                        visible="{StepScenario>/wizard1Step1}"
                                    >
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard1.filters.Ritenuta"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard1.filters.BeneficiarioRettifica"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard1.filters.ProspettiLiquidazione"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard1.filters.DocumentiCosto"
                                            type="XML"
                                        />
                                    </Panel>
                                    <c:Fragment
                                        fragmentName="gestionesop.view.fragment.amm.table.scenary1.TableRiepPosizioniScen1"
                                        type="XML"
                                    />
                                    <c:Fragment
                                        fragmentName="gestionesop.view.fragment.amm.table.scenary1.TableAddPosizioniScen1"
                                        type="XML"
                                    />
                                    <c:Fragment
                                        fragmentName="gestionesop.view.fragment.amm.table.scenary1.TableEditPosizioniScen1"
                                        type="XML"
                                    />
                                </WizardStep>
                                <WizardStep title="{i18n>titleWizard2}">
                                    <Panel
                                        class="sapUiNoContentPadding"
                                        backgroundDesign="Transparent"
                                        visible="{StepScenario>/wizard2}"
                                    >
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard2.Beneficiario"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard2.ModalitaPagamento"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard2.Quietanzante"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard2.Versante"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard2.BancaAccredito"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard2.Intermediario1"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard2.SedeBeneficiario"
                                            type="XML"
                                        />
                                    </Panel>
                                </WizardStep>
                                <WizardStep title="{i18n>titleWizard3}">
                                    <Panel
                                        class="sapUiNoContentPadding"
                                        backgroundDesign="Transparent"
                                        visible="{StepScenario>/wizard3}"
                                    >
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard3.Cos"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard3.Cpv"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard3.Cup"
                                            type="XML"
                                        />
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard3.Cig"
                                            type="XML"
                                        />
                                    </Panel>
                                </WizardStep>
                                <WizardStep title="{i18n>titleWizard4}">
                                    <Panel
                                        class="sapUiNoContentPadding"
                                        backgroundDesign="Transparent"
                                        visible="{StepScenario>/wizard4}"
                                    >
                                        <c:Fragment
                                            fragmentName="gestionesop.view.fragment.amm.wizard4.DatiSop"
                                            type="XML"
                                        />
                                    </Panel>
                                </WizardStep>
                            </Wizard>
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.detail.DatiFirmatario"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.table.TableSopFunction"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.Workflow"
                                type="XML"
                            />
                        </content>
                    </Page>
                </pages>
            </NavContainer>
        </f:content>
        <f:footer>
            <OverflowToolbar id="idToolbarDetail">
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.amm.create.FooterToolbar"
                    type="XML"
                />
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.amm.detail.ToolbarFunzionalita"
                    type="XML"
                />
                <Button
                    type="Emphasized"
                    text="{i18n>btnEdit}"
                    press="onSaveEdit"
                    visible="{= ${StepScenario>/visibleBtnSave} &amp;&amp; ${Utility>/EnableEdit} &amp;&amp; 
                        (${Utility>/Function} === 'Dettaglio' || ${Utility>/Function} === 'Rettifica') ? true : false }"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
