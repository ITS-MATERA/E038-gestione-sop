<mvc:View
    controllerName="gestionesop.controller.amm.detail.Scenary4"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:c="sap.ui.core"
>
    <f:DynamicPage
        showFooter="true"
        class="sapUiNoContentPadding"
        stickySubheaderProvider="wizScenario4"
    >
        <f:header>
            <f:DynamicPageHeader
                class="noPadding"
                pinnable="false"
            >
                <Panel
                    class="sapUiNoContentPadding"
                    backgroundDesign="Transparent"
                >
                    <c:Fragment
                        fragmentName="gestionesop.view.fragment.amm.HeaderSop"
                        type="XML"
                    />
                    <c:Fragment
                        fragmentName="gestionesop.view.fragment.amm.IconTabBar"
                        type="XML"
                    />
                </Panel>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Panel
                class="sapUiNoContentPadding"
                backgroundDesign="Transparent"
            >
                <Wizard
                    id="wizScenario4"
                    showNextButton="false"
                    visible="{= ${Utility>/Function} === 'Dettaglio' || ${Utility>/Function} === 'Rettifica' ? true : false}"
                    class=".sapMWizardStepTitle sapMWizardStep"
                >
                    <WizardStep title="{i18n>titleWizard1NewProspLiquidazione}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/wizard1Step1}"
                        >
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard1.scenary4.Beneficiario"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard1.scenary4.ImputazioneContabile"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard1.scenary4.ImportoLiquidazione"
                                type="XML"
                            />
                        </Panel>
                        <c:Fragment
                            fragmentName="gestionesop.view.fragment.amm.table.scenary4.TablePosizioniScen4"
                            type="XML"
                        />
                    </WizardStep>
                    <WizardStep title="{i18n>titleWizard2}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/wizard2}"
                        >
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard2.Beneficiario"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard2.ModalitaPagamento"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard2.Quietanzante"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard2.Versante"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard2.BancaAccredito"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard2.Intermediario1"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard2.SedeBeneficiario"
                                type="XML"
                            />
                        </Panel>
                    </WizardStep>
                    <WizardStep title="{i18n>titleWizard3}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/wizard3}"
                        >
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard3.Cos"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard3.Cpv"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard3.Cup"
                                type="XML"
                            />
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard3.Cig"
                                type="XML"
                            />
                        </Panel>
                    </WizardStep>
                    <WizardStep title="{i18n>titleWizard4}">
                        <Panel
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"
                            visible="{StepScenario>/wizard4}"
                        >
                            <c:Fragment
                                fragmentName="gestionesop.view.fragment.amm.wizard4.DatiSop"
                                type="XML"
                            />
                        </Panel>
                    </WizardStep>
                </Wizard>
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.amm.Workflow"
                    type="XML"
                />
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.amm.detail.DatiFirmatario"
                    type="XML"
                />
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.amm.table.TableSopFunction"
                    type="XML"
                />
            </Panel>
        </f:content>
        <f:footer>
            <OverflowToolbar
                id="idToolbarDetail"
                visible="false"
            >
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.amm.create.FooterToolbar"
                    type="XML"
                />
                <Button
                    type="Emphasized"
                    text="{i18n>btnInserisciProspettoLiquidazione}"
                    press="onInserisciProspettoLiquidazione"
                    visible="{= ${StepScenario>/visibleBtnInserisciProspLiquidazione} === true &amp;&amp; ${Sop>/Ztipopag} === '4' ? true : false }"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
                <c:Fragment
                    fragmentName="gestionesop.view.fragment.amm.detail.ToolbarFunzionalita"
                    type="XML"
                />
                <Button
                    type="Emphasized"
                    text="{i18n>btnEdit}"
                    press="onSaveEdit"
                    visible="{= ${StepScenario>/visibleBtnSave} &amp;&amp; ${Utility>/EnableEdit} ? true : false}"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
